<schemalist gettext-domain="gnome-shell-extensions">
  <schema path="/org/gnome/shell/extensions/" id="org.gnome.shell.extensions.output-audio-devices">
    <key type="b" name="debug">
        <default>false</default>
        <summary>Enable debug output</summary>
        <description>Write log output on the Errors tab in looking glass.</description>
    </key>
    <key type="b" name="unmute-active-device">
        <default>true</default>
        <summary>Unmute the active device</summary>
        <description>Unmute the device which has been selected as new output
          device on the volume indicator.</description>
    </key>
  </schema>
</schemalist>
